<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Epam courses final project</display-name>

    <request-character-encoding>UTF-8</request-character-encoding>


    <context-param>
        <param-name>jdbc-driver</param-name>
        <param-value>org.postgresql.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>jdbc-url</param-name>
        <param-value>jdbc:postgresql://localhost:5432/hcs</param-value>
    </context-param>
    <context-param>
        <param-name>jdbc-user</param-name>
        <param-value>epam_reviewer</param-value>
    </context-param>
    <context-param>
        <param-name>jdbc-password</param-name>
        <param-value>1234</param-value>
    </context-param>
    <context-param>
        <param-name>connection-valid-time</param-name>
        <param-value>1</param-value>
    </context-param>
    <context-param>
        <param-name>max-connection</param-name>
        <param-value>10</param-value>
    </context-param>

    <servlet>
        <servlet-name>LodgerViewController</servlet-name>
        <servlet-class>com.epam.controller.lodger.LodgerViewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LodgerViewController</servlet-name>
        <url-pattern>/lodger-view</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LodgerSaveController</servlet-name>
        <servlet-class>com.epam.controller.lodger.LodgerSaveController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LodgerSaveController</servlet-name>
        <url-pattern>/lodger-save</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>com.epam.listener.LaunchListener</listener-class>
    </listener>

    <filter>
        <filter-name>IdentityFilter</filter-name>
        <filter-class>com.epam.controller.IdentityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>IdentityFilter</filter-name>
        <url-pattern>/title-page.jsp</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>LocalizationFilter</filter-name>
        <filter-class>com.epam.controller.LocalizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LocalizationFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>
    <welcome-file-list>
        <welcome-file>/login-page.jsp</welcome-file>
    </welcome-file-list>
</web-app>
